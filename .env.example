# ============================================
# 环境变量配置示例
# ============================================
# 复制此文件为 .env.local（开发环境）或通过 Vercel Dashboard 配置（生产环境）
#
# ⚠️ 安全警告：
# 1. 永远不要将 .env 文件提交到 Git
# 2. 私钥和敏感信息必须通过安全渠道管理
# 3. 生产环境必须使用强密码和随机密钥
# ============================================

# ============================================
# 数据库配置
# ============================================
# PostgreSQL 数据库连接字符串
# 开发环境示例
DATABASE_URL="postgresql://postgres:password@localhost:5432/meme_master_dev"

# 生产环境示例（Supabase）
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres"

# ============================================
# 区块链 RPC 节点
# ============================================
# Ethereum Mainnet RPC
ETH_RPC_URL="https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID"

# Polygon Mainnet RPC
POLYGON_RPC_URL="https://polygon-rpc.com"

# Binance Smart Chain RPC
BSC_RPC_URL="https://bsc-dataseed.binance.org"

# Arbitrum RPC
ARBITRUM_RPC_URL="https://arb1.arbitrum.io/rpc"

# Optimism RPC
OPTIMISM_RPC_URL="https://mainnet.optimism.io"

# Base RPC
BASE_RPC_URL="https://mainnet.base.org"

# Avalanche RPC
AVALANCHE_RPC_URL="https://api.avax.network/ext/bc/C/rpc"

# ============================================
# Solana 配置
# ============================================
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
# Helius RPC（推荐，更高性能）
# SOLANA_RPC_URL="https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY"

# ============================================
# 钱包私钥（⚠️ 绝对重要！）
# ============================================
# 主钱包私钥（用于发送交易）
# ⚠️ 只在服务端使用，不要在前端暴露！
# ⚠️ 生产环境必须使用真实的私钥
WALLET_PRIVATE_KEY="0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef"

# ============================================
# 加密密钥（用于数据库加密）
# ============================================
# 生成方式: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890"

# ============================================
# API 密钥
# ============================================
# Infura API Key
INFURA_API_KEY="your_infura_project_id"

# Alchemy API Key
ALCHEMY_API_KEY="your_alchemy_api_key"

# Etherscan API Key（用于验证交易）
ETHERSCAN_API_KEY="your_etherscan_api_key"

# ============================================
# 对象存储（MinIO/S3）
# ============================================
# 对象存储访问密钥
S3_ACCESS_KEY="your_access_key"
S3_SECRET_KEY="your_secret_key"
S3_ENDPOINT="http://localhost:9000"
S3_BUCKET="meme-master-pro"
S3_REGION="us-east-1"

# ============================================
# 大语言模型集成
# ============================================
# 如果需要使用 OpenAI API
OPENAI_API_KEY="sk-..."

# 如果需要使用其他 LLM 服务
LLM_API_KEY="your_llm_api_key"
LLM_API_URL="https://api.example.com/v1"

# ============================================
# 身份验证
# ============================================
# JWT 密钥
# 生成方式: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET="your_jwt_secret_base64_encoded"

# Session 密钥
SESSION_SECRET="your_session_secret"

# ============================================
# 应用配置
# ============================================
# 应用环境：development | production
NODE_ENV="development"

# 应用 URL（用于回调等）
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================
# 监控和日志
# ============================================
# Sentry DSN（错误追踪）
SENTRY_DSN="https://xxx@sentry.io/xxx"

# Loggly URL（日志收集）
LOGGLY_URL="https://logs-01.loggly.com/inputs/xxx"

# ============================================
# 邮件服务（可选）
# ============================================
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="noreply@example.com"
SMTP_PASS="your_smtp_password"
SMTP_FROM="Meme Master Pro <noreply@example.com>"

# ============================================
# 限流配置
# ============================================
# API 速率限制
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"  # 15分钟（毫秒）

# ============================================
# 功能开关
# ============================================
# 是否启用真实交易（开发环境可设为 false）
ENABLE_REAL_TRANSACTIONS="false"

# 是否启用 AI 功能
ENABLE_AI_FEATURES="true"

# 是否启用市场监控
ENABLE_MARKET_MONITORING="true"

# ============================================
# 安全设置
# ============================================
# CORS 允许的源（生产环境应该限制）
NEXT_PUBLIC_ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# 最大文件上传大小（MB）
MAX_UPLOAD_SIZE="10"

# ============================================
# Vercel 特定配置
# ============================================
# 在 Vercel Dashboard 中设置以下环境变量
# 或使用 CLI: vercel env add VAR_NAME production

# ============================================
# 部署检查清单
# ============================================
# 部署前请确认：
# [ ] 所有私钥都已配置
# [ ] 数据库连接字符串正确
# [ ] RPC 节点可用
# [ ] 加密密钥已生成
# [ ] API 密钥已配置
# [ ] CORS 源已设置
# [ ] 功能开关已确认
# [ ] 安全设置已启用
